<div class="col-10 mx-auto">
  <h3>新規会員登録</h3><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
      <table class="table">
        <tr>
          <th>名前</th>
          <th>　（姓）<%= f.text_field :last_name, autofocus: true, placeholder: "姓", class: "form-control d-inline w-75" %></th>
          <th>　（名）<%= f.text_field :first_name, placeholder: "名", class: "form-control d-inline w-75" %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th>（セイ）<%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control d-inline w-75" %></th>
          <th>（メイ）<%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control d-inline w-75" %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th>　　　　<%= f.email_field :email, autocomplete: "email", class: "form-control d-inline w-75" %></th>
          <th></th>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th>　　　　<%= f.text_field :postal_code, class: "form-control d-inline w-75" %></th>
          <th></th>
        </tr>
        <tr>
          <th>住所</th>
          <th colspan="2">　　　　<%= f.text_field :address, class: "form-control d-inline w-75" %></th>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <th>　　　　<%= f.text_field :telephone_number, class: "form-control d-inline w-75" %></th>
          <th></th>
        </tr>
        <tr>
          <th>
            パスワード
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>        
          </th>
          <th>　　　　<%= f.password_field :password, autocomplete: "new-password", class: "form-control d-inline w-75" %></th>
          <th></th>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <th>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control d-inline w-75" %></th>
          <th></th>
        </tr>
        <tr>
          <th></th>
          <th>　　　　<%= f.submit "新規登録", class: "btn btn-success w-75" %></th>
          <th></th>
        </tr>
      </table>
    <% end %>
  <h4>既にご登録済みの方</h4><br>
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>