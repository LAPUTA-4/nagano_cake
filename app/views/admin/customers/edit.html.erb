<div class="col-10 mx-auto">
<h4>
    <%=  @customer.last_name  %><%=  @customer.first_name  %>さんの会員情報編集
  </h4>
      <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  <table class="table table-borderless">
    <tr>
      <th scope="row">名前</th>
      <th><%= f.text_field :last_name, placeholder: "姓", class: "form-control w-75" %></th>
      <th><%= f.text_field :first_name, placeholder: "名", class: "form-control w-75" %></th>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <th><%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control w-75" %></th>
      <th><%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control w-75" %></th>
    </tr>
     <tr>
      <th scope="row">郵便番号</th>
      <th><%= f.text_field :postal_code, class: "form-control w-75" %></th>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <th><%= f.text_field :address, class: "form-control" %></th>
    </tr>
    <tr>
      <th scope="row">電話番号</th>
      <th><%= f.text_field :telephone_number, class: "form-control w-75" %></th>
    </tr>
    <tr>
     <th scope="row">メールアドレス</th>
     <th><%= f.email_field :email, autocomplete: "email", class: "form-control w-75" %></th>
    </tr>
    <tr>
      <th scope="row">会員ステータス</th>
      <th><%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", {value: :false} %>　　　<%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会", {value: :true} %></th>
    </tr>
        <tr>
          <th><%= f.submit "変更を保存", class: "btn btn-success " %></th>
        </tr>
      </table>
      </div>
    <% end %>