<h2 class="text-center">注文履歴一覧</h2>
<div class="container">
<div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="col-xs-1">
            <%= order.created_at.strftime('%Y/%m/%d %H:%M')%>
            </td>
            <td class="text-left">
                <%= order.customer.last_name%>
                <%= order.customer.first_name%>
            </td>
            <td class="text-left">
              <%= %>
            </td>
            <td class="col-xs-2">
              <%=%>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
    <div class= "text-center"><%= paginate (@orders) %></div>
</div>