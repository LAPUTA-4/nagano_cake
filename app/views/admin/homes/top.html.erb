<h2 class="text-center">注文履歴一覧</h2>
<div class="container">
<div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="col-xs-1">
             <%=link_to order.updated_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id),class: "text-dark"%>
            </td>
            <td class="text-left">
                <%= order.customer.last_name%>
                <%= order.customer.first_name%>
            </td>
            <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.amount %>
            <% end %>
            </td>
                    
            <td class="text-left">
              <%= order.status %>
            </td>
          </tr>
          <% end %>
      </tbody>
      
    </table>
  </div>
    
</div>