<h2 class="text-center">商品一覧</h2>
<div class="container">
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="col-xs-1">
              <%= item.id %>
            </td>
            <td class="text-left">
                <%= link_to "#{item.name}", admin_item_path(item.id), class: "btn-link" %>
            </td>
            <td class="text-left">
              <%= item.price %>
            </td>
            <td class="text-left">
              <%= item.genre.name %>
            </td>
            <td class="col-xs-2">
              <% if item.is_active == true%>
                <font color="yellowgreen">販売中</font>
              <% else %>
                <font color="lightgray">販売停止中</font>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>