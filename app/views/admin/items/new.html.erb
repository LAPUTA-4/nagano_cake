<div class="col-12 mx-auto">
<div class="container">
  <div class="row mb-3">
   <div class='col-sm-12'>
    <span class="badge bg-secondary">
     <h5 class="text-center" style="color: white;">商品新規登録</h5>
    </span>
   </div>

   <div class="offset-sm-2">
    <%= form_with model:@item, url:admin_items_path, method: :post, local: true do |f| %>
     <div class="row mb-3">
      <div class="col-sm-3">
       <%= f.label :商品画像 %>
      </div>
      <div class="col-sm-7">
       <%= f.attachment_field :image %>
      </div>
     </div>
     <div class="row mb-3">
        <div class="col-sm-3">
         <%= f.label :商品名 %>
        </div>
        <div class="col-sm-7">
         <%= f.text_field :name, class: 'form-control book_title' %>
        </div>
       </div>
     <div class="row mb-5">
      <div class="col-sm-3">
       <%= f.label :商品説明 %>
      </div>
      <div class="col-sm-7">
       <%= f.text_area :introduction, class: 'form-control book_title', style: "height: 150%;" %>
      </div>
     </div>
     <div class="row mb-3">
      <div class="col-sm-3">
       <%= f.label :ジャンル %>
      </div>
      <div class="col-sm-7">
       <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: '-- 選択してください --'} %>
      </div>
     </div>
    <div class="row mb-3">
     <div class="col-sm-3">
      <%= f.label :税抜価格 %>
     </div>
     <div class="col-auto">
      <%= f.text_field :price, class: 'form-control book_title' %>
     </div>
    </div>
    <div class="row mb-3">
     <div class="col-sm-5">
      <%= f.label :販売ステータス %><br>
     </div>
     <div class="col-sm-7">
       <%= form_with(model: @item, local: true) do |form| %>
       <%= form.radio_button :is_active, true, checked: true %>
       <%= form.label :is_active, "販売中" %>
       <%= form.radio_button :is_active, false %>
       <%= form.label :is_active, "販売停止中" %>
     </div>
    </div>
     <div class="col-sm-5 offset-md-5">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
     </div>
    <% end %>
  <% end %>
 </div>
</div>
</div>
</div