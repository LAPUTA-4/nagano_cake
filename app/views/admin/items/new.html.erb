
<div class="col-12 mx-auto">
  <% if flash[:error].present? %>
    <div class="col-10 mx-auto alert alert-warning">
      <div>
        <% flash[:error].each do |message| %>
          <div class="text-center">・<%= message %></div>
        <% end %>
      </div>
    </div>
  <% end %>
  <h3>商品新規登録</h3>
  <%= form_with model:@item, url:admin_items_path, method: :post, local: true do |f| %>
    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">商品画像</label>
      </div>
      <div class="col my-1">
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">商品名</label>
      </div>
      <div class="col my-1">
       <%= f.text_field :name,class: "item_name", size: "40x1" %>
      </div>
    </div>

    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">商品説明</label>
      </div>
      <div class="col my-1">
        <%= f.text_area :introduction,  class: "item_introduction", size:  "40x5" %>
      </div>
    </div>

    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">ジャンル</label>
      </div>
      <div class="col my-1">
        <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: '-- 選択してください --'} %>
      </div>
    </div>

    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">税抜価格</label>
      </div>
      <div class="col my-1">
        <%= f.text_field :price, class: "item_price", size: "40x1" %>円
      </div>
    </div>

    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 my-1">
        <label class="font-weight-bold m-1">販売ステータス</label>
      </div>
      <div class="col my-1">
        <%= form_with(model: @item, local: true) do |form| %>
            <%= form.radio_button :is_active, true, checked: true %>
            <%= form.label :is_active, "販売中" %>
            <%= form.radio_button :is_active, false %>
            <%= form.label :is_active, "販売停止中" %>
      </div>
    </div>

    <div class="row py-1 mt-1 mb-5">
      <div class="col my-1">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  　<% end %>
  <% end %>

</div>


