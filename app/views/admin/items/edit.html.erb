<div class="col-12 mx-auto">
  <h3>商品編集</h3>

  <%= form_with model: @item, url:admin_item_path, method: :patch, local: true do |f| %>
    <div class="row py-1 my-1 border-bottom">
      <div class="col-12 col-sm-4 col-md-6 my-1">
        <label class="font-weight-bold m-1">商品画像</label>
        </div>
        <div class="col my-1">
            <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
        </div>
      </div>

        <div class="row py-1 my-1 border-bottom">
          <div class="col-12 col-sm-4 col-md-6 my-1">
          <label class="font-weight-bold m-1">商品名</label>
          </div>
          <div class="col my-1">
           <%= f.text_field :name, class: "item_name", size: "40x1" %>
      </div>
      </div>

        <div class="row py-1 my-1 border-bottom">
          <div class="col-12 col-sm-4 col-md-6 my-1">
          <label class="font-weight-bold m-1">商品説明</label>
          </div>
          <div class="col my-1">
             <%= f.text_area :introduction, class: "item_introduction", size:  "40x5" %>
           </div>
        </div>

         <div class="row py-1 my-1 border-bottom">
          <div class="col-12 col-sm-4 col-md-6 my-1">
          <label class="font-weight-bold m-1">ジャンル</label>
          </div>
          <div class="col my-1">
             <%= f.collection_select :genre_id, @genres, :id, :name, prompt: 'ジャンルを選択してください' %>
            </div>
          </div>

          <div class="row py-1 my-1 border-bottom">
          <div class="col-12 col-sm-4 col-md-6 my-1">
          <label class="font-weight-bold m-1">税抜価格</label>
          </div>
          <div class="col my-1">
             <%= f.text_field :price, class: "item_price", size: "40x1" %>円
            </div>
         </div>

            <div class="row py-1 my-1 border-bottom">
          <div class="col-12 col-sm-4 col-md-6 my-1">
          <label class="font-weight-bold m-1">販売ステータス</label>
          </div>
          <div class="col my-1">
            <%= f.radio_button :is_active, true %>販売中
            <%= f.radio_button :is_active, false %>販売停止中
            </div>
          </div>

        <div class="row py-1 mt-1 mb-5">
          <div class="col my-1">
          <%= f.submit "変更を保存", class: "btn btn-primary btn-lg" %>

            </div>
        </div>

    <% end %>
</div>