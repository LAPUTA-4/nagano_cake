<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light mx-4">
        <%= link_to "ながのCAKE", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mr-3">
            <% if admin_signed_in? %>
              <li class="nav-item mx-2"><%= link_to "商品一覧", admin_items_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "会員一覧", admin_customers_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "注文履歴一覧", admin_root_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link" %></li>
            <% elsif customer_signed_in? %>
              <li class="nav-item mx-2"><%= link_to "マイページ", my_page_customers_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "商品一覧", items_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "カート", cart_items_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "ログアウト", destroy_customer_session_path, class: "nav-link" %></li>
            <% else %>
              <li class="nav-item mx-2"><%= link_to "About", about_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "商品一覧", items_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %></li>
              <li class="nav-item mx-2"><%= link_to "ログイン", new_customer_session_path, class: "nav-link" %></li>
            <% end %>
          </ul>
          <% if admin_signed_in? %>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
          <% end %>
        </div>
      </nav>
    </header>
    <main>
      <div class="container mt-5">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </main>
    <div class="container mt-5">
  	  <div class="row">
    	  <div class="mx-auto">
    		  <p>CopyRight NaganoCake.inc</p>
    	  </div>
      </div>
    </div>
  </body>
</html>
