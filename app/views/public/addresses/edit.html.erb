<div class="container">
<div class="row mb-3">
<div class='col-sm-12'>
  <span class="badge bg-secondary">
    <h5 class="text-center" style="color: white;">配送先編集</h5>
 </span>
</div>
</div>
  <%= form_with model:@address, method: :patch, local:true do |f| %>
  <div class="row mb-5">
   <div class='col-sm-3'>
    <%= f.label :"郵便番号(ハイフンなし)" %>
   </div>
   <div class='col-sm-3'>
    <%= f.text_field :postal_code, class: 'form-control book_title' %>
   </div>
   </div>
   <div class="row mb-5">
    <div class='col-sm-3'>
     <%= f.label :住所 %>
    </div>
    <div class='col-sm-7'>
     <%= f.text_field :address, class: 'form-control book_title' %>
    </div>
   </div>
   <div class="row mb-5">
    <div class='col-sm-3'>
     <%= f.label :宛名 %>
    </div>
    <div class='col-sm-3'>
     <%= f.text_field :name, class: 'form-control book_title' %>
    </div>
    <div class='col-sm-3 offset-md-3'>
     <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
    </div>
    </div>
   <% end %>
  </div>
 </div>
</div>