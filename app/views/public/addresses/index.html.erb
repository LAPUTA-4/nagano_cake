<div class="container">
  <div class="row">
  <div class='col-sm-12'>
 <div class="alert alert-secondary" role="alert" style="width: 20%;">
    <h5 class="text-center">　配送先登録/一覧</h5>
 </div>
</div><!-- col-sm -->
</div><!-- row -->

<div class="row">
<%= form_with model:@address, local:true do |f| %>
  <div class='col-sm-6' style="width: 100%;">
  <%= f.label :"郵便番号(ハイフンなし)" %>
  </div>
  <div class='col-sm-6' style="width: 100%;">
  <%= f.text_field :postal_code, :placeholder => "0000000", class: 'form-control book_title' %>
  </div>
  <%= f.label :住所 %>
  <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: 'form-control book_title' %>
  <%= f.label :宛名 %>
  <%= f.text_field :name, :placeholder => "令和道子", class: 'form-control book_title' %>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
</div>

<div class='col-sm-12'>
 <table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
   <tbody>
     <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td>
         <%= link_to '編集する',edit_address_path(address),class: "btn btn-success fas fa-address-cog edit_address_#{address.id}" %>
         <%= link_to '削除する',address_path(address), method: :delete, class: "btn btn-danger fas fa-address-cog edit_address_#{address.id}" %>
       </td>
     </tr>
   </tbody>
  <% end %>
 </table>
</div><!-- col-sm -->

</div><!-- row -->
</div><!-- container -->







