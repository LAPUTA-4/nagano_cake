<h1>配送先登録/一覧</h1>

<%= form_with model:@address, local:true do |f| %>
  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, class: 'form-control book_title' %>
  <%= f.label :住所 %>
  <%= f.text_field :address, class: 'form-control book_title' %>
  <%= f.label :宛名 %>
  <%= f.text_field :name, class: 'form-control book_title' %>
  <%= f.submit class: 'btn btn-success' %>
<% end %>


<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
         <%= link_to '編集する',edit_address_path(address),class: "btn btn-success fas fa-address-cog edit_address_#{address.id}" %>
         <%= link_to '削除する',address_path(address), method: :delete, class: "btn btn-danger fas fa-address-cog edit_address_#{address.id}" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>






