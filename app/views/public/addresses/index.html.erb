<div class="container">
  <div class="row mb-5">
   <div class='col-sm-12'>
    <span class="badge bg-secondary">
     <h5 class="text-center" style="color: white;">配送先登録/一覧</h5>
    </span>
   </div>
  </div>
  <%= form_with model:@address, local:true do |f| %>
  <div class="row mb-3">
    <div class="col-sm-3">
     <%= f.label :"郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-sm-6">
     <%= f.text_field :postal_code, :placeholder => "0000000", class: 'form-control book_title' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3">
     <%= f.label :住所 %>
    </div>
    <div class="col-sm-9">
     <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: 'form-control book_title' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3">
     <%= f.label :宛名 %>
    </div>
    <div class="col-sm-6">
     <%= f.text_field :name, :placeholder => "令和道子", class: 'form-control book_title' %>
    </div>
    <div class="col-sm-2 offset-md-1">
     <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
  <div class="row mt-5">
   <div class='col-sm-9'>
    <table class="table table-bordered">
     <thead class="thead-light">
      <tr>
       <th>郵便番号</th>
       <th>住所</th>
       <th>宛名</th>
       <th></th>
      </tr>
     </thead>
    <% @addresses.each do |address| %>
     <tbody>
     <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
         <%= link_to '編集する',edit_address_path(address),class: "btn btn-success fas fa-address-cog edit_address_#{address.id}" %>
         <%= link_to '削除する',address_path(address), method: :delete, class: "btn btn-danger fas fa-address-cog edit_address_#{address.id}" %>
        </td>
       </tr>
      </tbody>
     <% end %>
    </table>
   </div>
  </div>
 </div>
</div>







