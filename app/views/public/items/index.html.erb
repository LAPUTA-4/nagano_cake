<div class="col-10 mx-auto">
    <h2 class="d-inline-block">
        <% if params[:name].nil? %>
            全商品
        <% else %>
            <%= params[:name] %>
        <% end %>
        一覧
    </h2>
    <h4 class="d-inline"> (全<%= @items.count %>件)</h4>
    <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
            <div class="mx-auto p-5 text-center">
                  <p>画像</p>
                  <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
                <p><%= item.name %></p>
                <p>￥<%= (item.price * 1.1).floor %></p>
            </div>
        <% end %>
    </div>
</div>