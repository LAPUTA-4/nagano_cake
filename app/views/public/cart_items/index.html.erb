<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: " btn btn-success pull-right" %>

<h2 class="text-center">ショッピングカート</h2>
<div class="container">
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td class="col-xs-1">
              <%= item.item.name %>
            </td>
            <td class="text-left">
                <%= item.item.price %>
            </td>
            <td class="text-left">
               <%= item.amount %>
            </td>
            <td class="text-left">
            <%= item.item.price * item.amount %>
              
            
              
            </td>
            <td class="col-xs-2">
              <%= link_to "削除", cart_item_path(item.id), method: :delete, class: "btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p>合計金額 <%= @sum %></p>
<%= link_to "買い物を続ける", items_path,class: " btn btn-success pull-right" %>
<%= link_to "情報入力に進む", new_order_path,class: " btn btn-success pull-right" %>
