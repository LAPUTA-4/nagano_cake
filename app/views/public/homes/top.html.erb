  <div class="col-12">
    <div class="GoogleFonts text-center">
      <h2>Welcome NaganoCake</h2>
      <div class="line"></div>
    </div>
  </div>

  <div class="col-12 m-auto d-none d-md-block py-5">
    <div class="top-image"></div>
  </div>



  <div class="col-12">
    <div class="GoogleFonts text-center">
      <h4  class="mb-5">~ New ~</h4>
    </div>
  </div>


  <div class="col-12 col-sm-12 d-flex flex-wrap justify-content-between mx-auto">
    <% @new_items.each do |item| %>
    <div class="col-6 col-md-3 col-lg-3 d-flex">
      <%=link_to item_path(item.id), class: "text-decoration-none text-dark card shadow-lg m-2" do %>
      <div class="mx-auto">
        <div><%= attachment_image_tag item, :image, :fill, 250, 200, format: 'jpeg', class: "img-fluid" %></div>
