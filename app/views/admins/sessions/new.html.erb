<div class="container">
  <div class="row mx-4">
    <div class="d-block w-40" style="background-color: #dddddd;">
<h2>管理者ログイン</h2>
</div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row pt-5">
    <div class="col-5">
    <%= f.label :"メールアドレス" %>
    </div>
    <div class="col-7">
    <%= f.email_field :email, autofocus: true , class: "w-100 form-control", autocomplete: "email" %>
  </div>
  </div>

<div class="row pt-4">
    <div class="col-5">
    <%= f.label :"パスワード" %>
    </div>
    <div class="col-7">
    <%= f.password_field :password, class: "w-100 form-control", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="row pt-4">
  <div class="col">
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"パスワードをお忘れの方" %>
    </div>
    </div>
    </div>
  <% end %>
  <div class="col-4 offset-3">
    <%= f.submit "ログイン", class: "btn btn-info mt-4 w-100" %>
    </div>
<% end %>
</div>